@page
@model Junior_challange_.Pages.CriarAnelModel

@{
    ViewData["Title"] = "CriarAnel";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@400;700&display=swap" rel="stylesheet">
</head>
<style>
    body {
        background-color: #2a3d35;
        font-family: 'Garamond', serif;
        color: #f1e1b3;
        margin: 0;
        padding: 0;
    }

    h1.forja {
        font-family: 'Cinzel Decorative', serif;
        font-size: 3rem;
        color: #e9c46a;
        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    }

    h1 {
        font-family: 'Cinzel', serif;
        font-size: 3rem;
        color: #e9c46a;
        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    }

    a {
        font-size: 1.2rem;
        color: #e9c46a;
        text-decoration: none;
        background-color: #4c7c4a;
        padding: 10px 15px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        display: inline-block;
        margin-bottom: 20px;
    }

        a:hover {
            background-color: #6f8c6b;
            text-decoration: underline;
        }


    .row {
        display: flex;
        justify-content: center;
    }

    .col-md-4 {
        width: 100%;
        max-width: 500px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #6c5b3f;
        border-radius: 5px;
        background-color: #3e5d4d;
        color: #f1e1b3;
    }

    .btn-primary {
        background-color: #4c7c4a;
        color: #f1e1b3;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #6f8c6b;
        }

    .text-danger {
        color: #d9534f;
        font-size: 0.9rem;
    }
</style>

<h1>Forje seu anel</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="mt-3">
            <div class="form-group">
                <label asp-for="Anel.Nome">Nome do Anel</label>
                <input class="form-control" asp-for="Anel.Nome" required maxlength="50" />
                <span asp-validation-for="Anel.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Anel.Poder">Nome do Poder</label>
                <input class="form-control" asp-for="Anel.Poder" required maxlength="50" />
                <span asp-validation-for="Anel.Poder" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Anel.Portador">Raça do Portador</label>
                <input class="form-control" asp-for="Anel.Portador" required maxlength="50" />
                <span asp-validation-for="Anel.Portador" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Anel.Forjador">Nome do Forjador</label>
                <input class="form-control" asp-for="Anel.Forjador" required maxlength="50" />
                <span asp-validation-for="Anel.Forjador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anel.Imagem">Imagem</label>
                <input class="form-control" asp-for="Anel.Imagem" required maxlength="50" value="https://quintacapa.com.br/wp-content/uploads/2021/11/O-Senhor-dos-Aneis-O-Um-Anel-destaque.jpg" />
                <span asp-validation-for="Anel.Imagem" class="text-danger"></span>
            </div>

            <input type="submit" value="Forjar" class="btn btn-primary" />
        </form>

    </div>
</div>

<div>
    <a asp-page="./Index">Início</a>
</div>

<script>
    if (@ModelState.ErrorCount > 0) {
        var errorMessages = [];
    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
    {
        <text>errorMessages.push("@error.ErrorMessage");</text>
    }
            if (errorMessages.length > 0) {
            alert(errorMessages.join("\n"));
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
